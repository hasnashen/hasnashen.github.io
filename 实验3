<body>
    <div class="container">
        <h1>Type your name here.</h1>
        <input id="nameInput" type="text" placeholder="Enter your name">
        <!-- 这是新添加的错误提示 -->
        <div id="errorMessage" class="error">Please do not enter empty text. Please re-enter.</div>
        <button class="enter-btn" onclick="goToHomepage()">Submit</button>
    </div>

    <script>
        function validateName(name) {
            // 移除首尾空格
            const trimmedName = name.trim();
            
            // 检查是否为空
            if (trimmedName.length === 0) {
                return false;
            }
            
            // 检查是否只包含标点符号
            // 这个正则匹配只包含标点符号和空格的字符串
            const onlySymbols = /^[\s\p{P}]+$/u.test(trimmedName);
            
            return !onlySymbols;
        }
        
        function goToHomepage() {
            const nameInput = document.getElementById('nameInput');
            const errorMessage = document.getElementById('errorMessage');
            const name = nameInput.value;
            
            if (validateName(name)) {
                // 验证通过，保存名字并跳转
                localStorage.setItem('userName', name.trim());
                window.location.href = "home.html";
            } else {
                // 验证失败，显示错误信息
                errorMessage.style.display = 'block';
                
                // 输入框变红
                nameInput.style.border = '2px solid red';
                
                // 3秒后隐藏错误信息并恢复边框
                setTimeout(function() {
                    errorMessage.style.display = 'none';
                    nameInput.style.border = '';
                }, 3000);
            }
        }
        
        // 当用户开始输入时，隐藏错误信息
        document.getElementById('nameInput').addEventListener('input', function() {
            document.getElementById('errorMessage').style.display = 'none';
            this.style.border = '';
        });
    </script>
</body>
</html>